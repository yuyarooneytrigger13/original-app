<div class="invitation-container">
  <h2 class="invitation-title"><%= t "devise.invitations.edit.header" %></h2>

  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>

    <% if f.object.class.require_password_on_accepting %>

      <div class="form-field">
        <%= f.label :nickname, "ニックネーム", class: "form-label" %>
        <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネームを入力", class: "form-input" %>
      </div>
      <div class="form-field">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, placeholder: "パスワードを入力", class: "form-input" %>
      </div>

      <div class="form-field">
        <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
        <%= f.password_field :password_confirmation, placeholder: "パスワードを再入力", class: "form-input" %>
      </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn-submit" %>
    </div>
  <% end %>
</div>

<h2>Sign up</h2>

<div class="auth-wrapper">
  <div class="auth-container">
    <h2 class="auth-title">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname, "ニックネーム" %>
        <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネームを入力" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "example@email.com" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em style="font-size: 0.8rem; color: #94a3b8;">(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード（確認）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "アカウント登録", class: "auth-btn" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "すでにアカウントをお持ちの方（ログイン）", new_session_path(resource_name) %>
    </div>
  </div>
</div>

<div class="auth-wrapper">
  <div class="auth-container">
    <h2 class="auth-title">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@email.com" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field" style="display: flex; align-items: center; gap: 8px;">
          <%= f.check_box :remember_me, style: "width: auto; margin: 0;" %>
          <%= f.label :remember_me, "ログイン状態を保持する", style: "margin: 0; cursor: pointer;" %>
        </div>
      <% end %>

      <div class="auth-actions">
        <%= f.submit "ログイン", class: "auth-btn" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "新規登録はこちら", new_registration_path(resource_name) %><br />
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "パスワードを忘れた場合", new_password_path(resource_name) %>
      <% end %>
    </div>
  </div>
</div>
